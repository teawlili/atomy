@import url('https://rsms.me/inter/inter.css');

html {
  font-family: 'Inter', sans-serif;
  font-weight: 200;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 400;
}

.home .hero h1, .home .hero .description {
  text-shadow: 0 0 5px rgba(15, 15, 15, 0.4);
}

.home .hero h1 {
  font-weight: 200;
}

.home .hero .description, .home .feature p, .home .footer, .home .feature h2 {
  color: #010b0a !important;
}
.custom-block.tip {
  border-color: #00B84A !important;
}
.custom-block.warning {
  border-color: #FFAA00 !important;
}
.custom-block.warning .custom-block-title {
  color: #FFAA00 !important;
}
.page-edit .edit-link a {
  color: #f43b6c !important;
}
ul code, ol code, p code {
  color: #010b0a !important;
}